      </children>

    </component>

    <component id="goalFPostR">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="1.5" y="0" z="13.6"/>
        <rotate axis="x" angle="-90"/>
        <scale x="0.1" y="0.1" z="0.7"/>
      </transformation>

      <materials>
