      </children>

    </component>

    <component id="ball">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="0" y="0.1" z="0"/>
        <scale x="0.2" y="0.2" z="0.2"/>
      </transformation>

      <materials>
        <material id="ballMat"/>
      </materials>

      <texture id="ballTex"/>

      <children>
        <primitiveref id="ballPrim"/>
      </children>

    </component>

    <component id="lights">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <scale x="1" y="1" z="1"/>
      </transformation>

      <materials>
        <material id="postMat"/>
      </materials>

      <texture id="lightPostTex"/>

      <children>
        <componentref id="lightB"/>
        <componentref id="lightF"/>
      </children>

    </component>

    <component id="lightB">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <scale x="1" y="1" z="1"/>
      </transformation>

      <materials>
        <material id="inherit"/>
      </materials>

      <texture id="inherit"/>

      <children>
        <componentref id="lightBPostL"/>
        <componentref id="lightBPostR"/>
      </children>

    </component>

    <component id="lightBPostL">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="12" y="8.2" z="-18"/>
        <rotate axis="x" angle="90"/>
        <scale x="0.3" y="0.3" z="2.1"/>
      </transformation>

      <materials>
        <material id="inherit"/>
      </materials>

      <texture id="inherit"/>

      <children>
        <primitiveref id="lightPostPrim"/>
      </children>

    </component>

    <component id="lightBPostR">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="-12" y="8.2" z="-18"/>
        <rotate axis="x" angle="90"/>
        <scale x="0.3" y="0.3" z="2.1"/>
      </transformation>

      <materials>
        <material id="inherit"/>
      </materials>

      <texture id="inherit"/>

      <children>
        <primitiveref id="lightPostPrim"/>
      </children>

    </component>

    <component id="lightF">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <scale x="1" y="1" z="1"/>
      </transformation>

      <materials>
        <material id="inherit"/>
      </materials>

      <texture id="inherit"/>

      <children>
        <componentref id="lightFPostL"/>
        <componentref id="lightFPostR"/>
      </children>

    </component>

    <component id="lightFPostL">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="12" y="8.2" z="18"/>
        <rotate axis="x" angle="90"/>
        <scale x="0.3" y="0.3" z="2.1"/>
      </transformation>

      <materials>
        <material id="inherit"/>
      </materials>

      <texture id="inherit"/>

      <children>
        <primitiveref id="lightPostPrim"/>
      </children>

    </component>

    <component id="lightFPostR">

      <!-- bloco "transformation" obrigatorio -->
      <transformation>
        <translate x="-12" y="8.2" z="18"/>
        <rotate axis="x" angle="90"/>
        <scale x="0.3" y="0.3" z="2.1"/>
